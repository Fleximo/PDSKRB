<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#039be6"
    tools:context="com.fleximo.podskarbi.SpendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <AutoCompleteTextView
            android:id="@+id/actv_SpendActivity_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:ems="10" />
        <Button
            android:id="@+id/btn_SpendActivity_AddSpendCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/str_SpendActivity_AddSpendCategory"
            android:layout_margin="8dp"
            android:background="#e64a19" />
        <LinearLayout
            android:id="@+id/ll_SpendActivity_AddSpendCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible">
            <ImageButton
                android:id="@+id/btn_SpendActivity_AddSpendCategoryOk"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_trending_down_white_24dp"/>
            <ImageButton
                android:id="@+id/btn_SpendActivity_AddSpendCategoryCancel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_trending_down_white_24dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_SpendActivity_Ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_SpendActivity_OK"
            android:layout_margin="8dp"
            android:background="#e64a19"/>
        <Button
            android:id="@+id/btn_SpendActivity_Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_SpendActivity_Cancel"
            android:layout_margin="8dp"
            android:background="#e64a19"/>
    </LinearLayout>

</LinearLayout>
